@model RazorPagesMovie.Pages.Admin.Users.UsersIndexModel
@{
    ViewData["Title"] = "User Management";
}


<h1>@ViewData["Title"]</h1>
<hr />

## 🔑 Administrators (@Model.Admins.Count)

@if (Model.Admins != null && Model.Admins.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Admins)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info">Edit Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No users currently have the 'Admin' role assigned.</div>
}

<hr />

## 👥 All Users (@Model.Users.Count)

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null && Model.Users.Any()) // Added .Any() check for robustness
        {
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@(user.EmailConfirmed ? "Yes" : "No")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit Roles</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No users found.</td>
            </tr>
        }
    </tbody>
</table>34
