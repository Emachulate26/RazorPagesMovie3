@page
@model UsersIndexModel
@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.EmailConfirmed ? "✅ Yes" : "❌ No")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info">Edit Roles</a>
                    @* Optionally: Add a link to reset password or ban user *@
                </td>
            </tr>
        }
    </tbody>
</table>