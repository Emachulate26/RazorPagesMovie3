@model RazorPagesMovie.Pages.Admin.Users.UsersIndexModel
@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@(user.EmailConfirmed ? "Yes" : "No")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit Roles</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No users found.</td>
            </tr>
        }
    </tbody>
</table>