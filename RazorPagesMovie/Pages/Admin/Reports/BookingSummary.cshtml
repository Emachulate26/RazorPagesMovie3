@page
@model BookingSummaryModel
@{
    ViewData["Title"] = "Booking Summary Report";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h2>📅 Date Range Selection</h2>

<form method="get" class="row g-3 align-items-end mb-4">
    <div class="col-auto">
        <label asp-for="StartDate" class="form-label">Start Date:</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="col-auto">
        <label asp-for="EndDate" class="form-label">End Date:</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-success">Run Report</button>
    </div>
</form>

<hr />

<h2>📈 Report Results (@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString())</h2>

@if (Model.BookingSummary.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Total Bookings</th>
                <th>Total Revenue</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BookingSummary)
            {
                <tr>
                    <td>@item.MovieTitle</td>
                    <td>@item.TotalBookings</td>
                    <td>
                        @* Assuming TotalRevenue is a decimal/money type *@
                        @item.TotalRevenue.ToString("C")
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>TOTALS</th>
                <th>@Model.BookingSummary.Sum(i => i.TotalBookings)</th>
                <th>@Model.BookingSummary.Sum(i => i.TotalRevenue).ToString("C")</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No bookings found for the selected date range.
    </div>
}
