@page
@model BookingConfirmationModel
@{
    ViewData["Title"] = "Booking Confirmed!";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-success">
            <div class="card-header bg-success text-white text-center">
                <h1 class="card-title mb-0">🎉 Booking Confirmed!</h1>
            </div>
            <div class="card-body">
                <p class="lead text-center">Thank you, **@Model.Booking.UserName**! Your reservation is complete.</p>
                <hr />

                <h3 class="mb-3">Details</h3>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Movie:</strong> @Model.Booking.MovieTitle
                    </li>
                    <li class="list-group-item">
                        <strong>Showtime:</strong> @Model.Booking.ShowTime.ToString("f")
                    </li>
                    <li class="list-group-item">
                        <strong>Cinema:</strong> @Model.Booking.MovieTimeSlot.Cinema.Name
                    </li>
                    <li class="list-group-item">
                        <strong>Tickets:</strong> @Model.Booking.NumberOfTickets
                    </li>
                    <li class="list-group-item font-weight-bold">
                        <strong>Total Paid:</strong> <span class="text-success h5">@((Model.Booking.NumberOfTickets * Model.Booking.TotalPrice).ToString("C"))</span>
                    </li>
                </ul>

                <div class="mt-4 text-center">
                    <a asp-page="./Index" class="btn btn-primary">Return to Movie List</a>
                </div>
            </div>
        </div>
    </div>
</div>