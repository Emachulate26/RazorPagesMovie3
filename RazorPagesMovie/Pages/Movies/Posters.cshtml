@page
@model RazorPagesMovie.Pages.Movies.PostersModel

<h2>Movie Posters</h2>

<div class="movie-grid">
    @foreach (var poster in Model.Posters)
    {
        <img src="@poster" class="poster-img" />
    }
</div>

<style>
    .poster-img {
        width: 200px;
        height: 300px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .movie-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }
</style>
