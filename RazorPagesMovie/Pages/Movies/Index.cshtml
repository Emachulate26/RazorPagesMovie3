@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Explore Movies Online";
}

<h2 class="mt-4">Explore Movies Online</h2>

<!-- Search + Filter Bar -->
<form method="get" class="row mb-4">
    <div class="col-md-3">
        <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
            <option value="">All Genres</option>
        </select>
    </div>

    <div class="col-md-6">
        <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by Title..." />
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<!-- Movie Grid -->
<div class="movie-grid">
    @foreach (var movie in Model.Movie)
    {
        <div class="movie-card">

            <!-- MOVIE POSTER -->
            <img src="@movie.ImageUrl"
                 alt="@movie.Title"
                 class="movie-poster" />

            <!-- MOVIE INFORMATION -->
            <div class="movie-info">
                <h3 class="movie-title">@movie.Title</h3>
                <p class="movie-meta">@movie.Genre • @movie.ReleaseDate.Year</p>

                <a asp-page="./Details" asp-route-id="@movie.Id" class="details-btn">
                    Details
                </a>
            </div>

        </div>
    }
</div>

<style>
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    .movie-card {
        background: rgba(255,255,255,0.05);
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255,255,255,0.1);
    }

    .movie-poster {
        width: 150px;
        height: 220px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .movie-title {
        font-size: 18px;
        font-weight: 600;
        margin: 5px 0;
    }

    .movie-meta {
        font-size: 14px;
        opacity: 0.7;
        margin-bottom: 10px;
    }

    .details-btn {
        padding: 8px 16px;
        border-radius: 5px;
        border: 1px solid #007bff;
        color: #007bff;
        text-decoration: none;
        transition: 0.3s;
    }

        .details-btn:hover {
            background: #007bff;
            color: white;
        }
</style>
