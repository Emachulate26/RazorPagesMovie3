@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Explore Movies Online";
}

<h2 class="mt-4">Explore Movies Online</h2>

<!-- Search + Filter Bar -->
<form method="get" class="row mb-4">
    <div class="col-md-3">
        <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
            <option value="">All Genres</option>
        </select>
    </div>

    <div class="col-md-6">
        <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by Title..." />
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<!-- Movie Grid -->
<div class="movie-grid mt-4">
    @foreach (var movie in Model.Movie)
    {
        <div class="movie-card">
           

                <a asp-page="./Details" asp-route-id="@movie.Id" class="details-btn">
                    Details
                </a>
            </div>

        
    }
</div>
