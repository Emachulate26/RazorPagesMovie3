@page "{movieId:int}"
@model RazorPagesMovie.Pages.Bookings.CreateModel
@{
    ViewData["Title"] = "Book a Movie";
}

<h2>Book: @Model.Movie?.Title</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Booking.MovieTimeSlotId" class="form-label">Select Showtime & Cinema</label>
        <select asp-for="Booking.MovieTimeSlotId" asp-items="Model.MovieTimeSlots" class="form-select">
            <option value="">-- Select Slot --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Booking.NumberOfTickets" class="form-label">Number of Tickets</label>
        <input asp-for="Booking.NumberOfTickets" type="number" min="1" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
</form>
